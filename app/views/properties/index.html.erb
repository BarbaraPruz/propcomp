<div class="page-container">
    <div id="prop-index-title-container">
        <h1>Property List</h1>
        <%= form_tag properties_path, method: "get" do %> 
            <%= sort_select_tag(@sort_field) %>
            <%= submit_tag "Sort" %>
        <% end %>
    </div>
    <div>
        <table id="properties">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Number</th>
                    <th scope="col">Frontage</th>
                    <th scope="col">Floors</th>
                    <th scope="col">Square Feet</th>
                    <th scope="col">Lanai</th>
                    <th scope="col">View</th>
                </tr>
            </thead>
            <tbody>
                <% @properties.each do | property | %>
                    <tr>
                        <td><%= link_to "View", property_path(property.id) %></td>
                        <td><%= property.number %></td>
                        <td class="align-left"><%= property.frontage %></td>
                        <td><%= property.floors %></td>
                        <td><%= property.square_feet %></td>       
                        <td><%= property.lanai %></td>
                        <td class="align-left"><%= property.view %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

